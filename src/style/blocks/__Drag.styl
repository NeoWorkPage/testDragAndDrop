.drag{
  width:70%;
  flex: 1 70%;
  display: flex;
  justify-content: space-around;
  &__area{
    text-align left
    pre{
      display: block;
      padding: 9.5px;
      margin: 0 0 10px;
      font-size: 13px;
      line-height: 1.42857143;
      color: #333;
      width:  400px
      word-break: break-all;
      word-wrap: break-word;
      background-color: #f5f5f5;
      border: 1px solid #ccc;
      border-radius: 4px;
      overflow: auto
      max-height: 400px
    }
  }
}
.dragArea{
  width: 300px
  height: 100%;
  border: 1px solid rgba(0, 0, 0, 0.04);
  padding: 10px;
  border-radius: 3px;
  &_item{
    cursor: pointer;
    margin-bottom: 10px;
    text-align left
    padding: 10px;
    padding-left: 40px
    border: 1px solid rgba(0, 0, 0, 0.3);
    border-radius: 5px;
    transition: .5s;
    position: relative;
    &:hover{
      background-color: rgba(0, 0, 0, 0.05);
    }
    &-size{
      position: absolute
      right: 29px;
      top: 17px;
      font-size 10px
    }
    &-close{
      position: absolute;
      top: 8px;
      right: 13px;
      font-size: 18px;
      color: rgba(255, 0, 0, 0.57);
      cursor: pointer;
    }
  }
}

@media(max-width: 1580px){
  .dragArea_item{
    padding-left: 15px
  }
  .dragArea{
    width: 220px
  }
  .drag__area {

    pre{
      width: 300px
    }
  }
}
