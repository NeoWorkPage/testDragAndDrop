.load{
  width:30%;
  flex: 1 30%;
  height: 400px;
  border: 5px dashed #4a4a4a;
  border-radius: 5px;
  transition .5s
  margin-right: 40px
  &__text{
    display: flex;
    justify-content: center;
    align-items: center;
    height: 100%;
    transition .5s
    cursor: pointer;
    &:hover{
      background-color: rgba(107, 102, 100, 0.2);
    }
    &:active{
      background-color: rgba(107, 102, 100, 0.2);
    }
  }
}
@media(max-width: 1580px){
  .load{
    width: 100px

    flex: 100px
    .load__text{
      width: 100%
    }
  }
}
